package numeros_inteiros;

import java.util.Scanner;

public class Principal {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite 2 números inteiros:%n");
		
		int a = sc.nextInt();
		int b = sc.nextInt();
		imprimirMaiorValor(a, b);
		
		sc.close();

	}

	public static void imprimirMaiorValor(int x, int y) {
	    if (x > y) {
	        System.out.printf("O maior número é o %d.%n", x);
	    } else if (y > x) {
	        System.out.printf("O maior número é o %d.%n", y);
	    } else {
	        System.out.printf("Os dois números possuem o mesmo valor, que é %d.%n", x);
	    }
	}
	
}
